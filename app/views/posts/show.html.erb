<h1><%= @post.title %></h1>
<div>
  <%= @post.body %>
</div>
<p><%= @post.created_at %></p>

<p>
  <%= link_to 'Edit this post', edit_post_path(@post) %>
  <%= link_to 'Delete this post', @post, :method => :delete, :confirm => 'Are you sure?' %> 
  <%= link_to 'All Posts', posts_path %>
</p>
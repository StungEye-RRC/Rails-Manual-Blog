<h1>Edit This Post</h1>

<%= form_for @post do |f| %>
  <div>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Update Post' %>
<% end %>

<p><%= link_to 'Back to All Posts', posts_path %></p>
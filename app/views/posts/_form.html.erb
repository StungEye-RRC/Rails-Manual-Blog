<%= form_for @post do |f| %>
  <div>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %><br/>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :image %><br/>
    <%= f.text_field :image %>
  </div>
  <div>
    <%= f.label :awesomeness %><br/>
    <%= f.select :awesomeness, Post::ALLOWED_AWESOMENESS %>
  </div>
  <%= f.submit button_text  %>
<% end %>